#!/usr/bin/env python

import uuid, sys, hashlib
from hackeriet import mifare

mifare.keyA = os.getenv("MIFARE_KEY_A")
mifare.keyB = os.getenv("MIFARE_KEY_B")

d = uuid.uuid4()

printf("Waiting for card")
mifare.wait_card()
printf("Writing card ...")
mifare.write_sector(d, 7)

print("Hash: " + hashlib.sha256(d.bytes).hexdigest())
print("Wrote: " + str(d.bytes))
#print("Read: " + mifare.read_sector(7)[0:16])

